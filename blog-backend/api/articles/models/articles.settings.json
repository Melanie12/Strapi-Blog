{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Articles",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "categories": {
      "via": "articles",
      "collection": "categories"
    },
    "publish_at": {
      "type": "datetime",
      "required": false
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "ready": {
      "type": "boolean",
      "default": true
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    }
  }
}
